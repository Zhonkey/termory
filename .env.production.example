# Production Environment Variables Example
# Скопируйте этот файл в .env.production и заполните реальные значения

# Database Configuration
DB_DSN="user=trainer password=YOUR_SECURE_PASSWORD host=db port=5432 dbname=trainer sslmode=require"
DB_DRIVER="pgx"

# Server Configuration
PORT=8080
ENV=production

# JWT Configuration (если используется)
JWT_SECRET="your-super-secret-jwt-key-change-this"
JWT_EXPIRATION=3600

# CORS Configuration (если нужно)
CORS_ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Database Connection Pool
DB_MAX_CONNECTIONS=25
DB_MIN_CONNECTIONS=5
DB_CONNECTION_TIMEOUT=30

# API Rate Limiting (если используется)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
